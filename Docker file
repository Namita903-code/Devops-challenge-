provider "kubernetes" {
  config_path = "~/.kube/config"
}

resource "kubernetes_namespace" "devops" {
  metadata {
    name = "devops-challenge"
  }
}

resource "kubernetes_resource_quota" "quota" {
  metadata {
    name = "mem-quota"
    namespace = kubernetes_namespace.devops.metadata[0].name
  }

  spec {
    hard = {
      "limits.memory" = "512Mi"
    }
  }
}
